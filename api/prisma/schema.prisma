generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  email     String    @unique
  password  String
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  artworks Artwork[]
}

model Artwork {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  userId      String   @db.ObjectId
  description String?
  url         String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user   User    @relation(fields: [userId], references: [id])
  anchor Anchor?
}

model Anchor {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  artworkId String   @unique @db.ObjectId
  latitude  Float
  longitude Float
  altitude  Float?
  heading   Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  artwork Artwork @relation(fields: [artworkId], references: [id])
}